<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- =======================================
         基础属性 (Global Properties)
         ======================================= -->
    <property name="APP_NAME" value="springboot-app"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="CONSOLE_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>

    <!-- =======================================
         通用 Appenders (Shared Appenders)
         ======================================= -->

    <!-- 1. 彩色控制台输出 (用于本地环境) -->
    <appender name="COLORED_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. JSON 结构化日志到控制台 (用于非本地环境) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app_name":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <!-- 3. JSON 结构化日志到文件 (滚动) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.json.log</file> <!-- 建议用 .json.log 后缀 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app_name":"${APP_NAME}"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/${APP_NAME}-%d{yyyy-MM-dd}.%i.json.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 4. JSON 结构化错误日志到文件 (滚动) -->
    <appender name="JSON_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.json.log</file> <!-- 建议用 .json.log 后缀 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app_name":"${APP_NAME}"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/${APP_NAME}-error-%d{yyyy-MM-dd}.%i.json.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 5. 异步文件 Appender (包装普通日志) -->
    <appender name="ASYNC_JSON_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="JSON_FILE"/>
    </appender>

    <!-- 6. 异步文件 Appender (包装错误日志) -->
    <appender name="ASYNC_JSON_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="JSON_ERROR_FILE"/>
    </appender>


    <!-- =======================================
         本地环境 (local) - 彩色控制台 + JSON 文件
         ======================================= -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="COLORED_CONSOLE"/>
            <appender-ref ref="ASYNC_JSON_FILE"/>
            <appender-ref ref="ASYNC_JSON_ERROR_FILE"/>
        </root>
        <logger name="com.yimusi" level="DEBUG" additivity="false">
            <appender-ref ref="COLORED_CONSOLE"/>
            <appender-ref ref="ASYNC_JSON_FILE"/>
            <appender-ref ref="ASYNC_JSON_ERROR_FILE"/>
        </logger>
    </springProfile>


    <!-- =======================================
         开发环境 (dev) - JSON 控制台 + JSON 文件
         ======================================= -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_JSON_FILE"/>
            <appender-ref ref="ASYNC_JSON_ERROR_FILE"/>
        </root>
        <logger name="com.yimusi" level="DEBUG" additivity="false">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_JSON_FILE"/>
            <appender-ref ref="ASYNC_JSON_ERROR_FILE"/>
        </logger>
    </springProfile>


    <!-- =======================================
         生产 & 测试环境 (prod, test) - JSON 控制台 + JSON 文件
         ======================================= -->
    <springProfile name="prod, test">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_JSON_FILE"/>
            <appender-ref ref="ASYNC_JSON_ERROR_FILE"/>
        </root>
    </springProfile>

</configuration>
